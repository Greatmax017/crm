
$(function(){

	$(document).on("click","#vertical-menu-btn", function (e) {
		e.preventDefault();
		$("body").toggleClass("sidebar-enable");
		992 <= $(window).width() ? $("body").toggleClass("vertical-collpsed") : $("body").removeClass("vertical-collpsed");
	});

	//diy_alert
	window.alert = function (t,login) {
		var className='alert_popup';
		var boxNode = document.getElementById('diy_alert');
		var thisNode=boxNode.getElementsByClassName("alert_popup");
		if(thisNode.length>0){
			for(var i=0;i<thisNode.length;i++){
				boxNode.removeChild(thisNode[i]);
			}
		}
		var dialog = document.createElement('div');
		if(login){
			var height = $(window).height();
			dialog.style.marginTop = parseInt(height/3)-40+'px';
			className='alert_popup class-login';
		}

		dialog.className = className;
		dialog.innerHTML = t;
		boxNode.appendChild(dialog);
		setTimeout(function () {
			dialog.className = 'alert_popup closed';
		}, 3000);
	};
})
